# ================================
# Northgate School - Environment Variables
# ================================
# Copy this file to .env and update the values as needed

# ================================
# Application Configuration
# ================================
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_NAME="Northgate School"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# ================================
# Database Configuration (MySQL - Docker Container)
# ================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=northgate_school
DB_USER=northgate_user
DB_PASSWORD=northgate_password
DB_ROOT_PASSWORD=northgate_root_password
DB_SSL=false

# Database connection URL (alternative to individual DB variables)
DATABASE_URL="mysql://northgate_user:northgate_password@mysql:3306/northgate_school"

# Prisma Database URL (for Prisma CLI commands)
PRISMA_DATABASE_URL="${DATABASE_URL}"

# For external MySQL (when not using Docker container)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=northgate_school
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_SSL=false

# ================================
# Authentication & Security
# ================================
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# JWT Secret (if using custom JWT implementation)
JWT_SECRET=your-jwt-secret-key-here

# ================================
# External Services (Optional)
# ================================

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Service (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Payment Gateway (if applicable)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# ================================
# Development & Debugging
# ================================
# Enable debug mode (set to true for development)
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ================================
# Performance & Monitoring
# ================================
# Enable performance monitoring
ENABLE_METRICS=false

# Sentry DSN (for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# ================================
# Third-party Integrations
# ================================
# Google Analytics
NEXT_PUBLIC_GA_ID=GA-XXXXXXXXX

# Social Media URLs
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/northgateschool
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/northgateschool
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/northgateschool

# ================================
# Content Management
# ================================
# CMS Configuration (if using headless CMS)
CMS_API_URL=https://your-cms-api.com
CMS_API_KEY=your-cms-api-key

# ================================
# Localization
# ================================
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr

# ================================
# Feature Flags
# ================================
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_EVENTS=true
NEXT_PUBLIC_ENABLE_GALLERY=true
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
